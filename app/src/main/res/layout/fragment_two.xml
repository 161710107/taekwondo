<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bin">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="14dp"
            android:textColor="#000080"
            android:text="1.Arae Makki"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arae" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:text="@string/apa"
            android:textStyle="bold"
            android:textColor="#000080"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="14dp"
            android:textColor="#000080"
            android:text="2.Arae Hecho Makki"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:src="@drawable/hecho" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:text="Arae Hecho Makki, yaitu tangkisan bawah dengan menggunakan kedua tangan"
            android:textStyle="bold"
            android:textColor="#000080"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="14dp"
            android:textColor="#000080"
            android:text="3.Eolgol Makki"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:src="@drawable/em" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:text="Eolgol Makki, yaitu tangkisan atas ke arah kepala"
            android:textStyle="bold"
            android:textColor="#000080"/>
    </LinearLayout>
</ScrollView>